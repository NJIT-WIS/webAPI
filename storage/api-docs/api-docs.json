{
    "swagger": "2.0",
    "info": {
        "title": "FAQ Bot",
        "description": "L5 Swagger API description",
        "version": "1.0.0"
    },
    "host": "127.0.0.1:8000",
    "basePath": "/api",
    "schemes": [
        "http",
        "https"
